{
  "name": "vocabhelper",
  "displayName": "Vocab Helper",
  "description": "Helper extension for the Vocab i18n framework",
  "version": "0.0.2",
  "publisher": "askoufis",
  "repository": {
    "type": "git",
    "url": "https://github.com/askoufis/vocab-vscode-extension"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vocabHelper.extractTranslationString",
    "onCommand:vocabHelper.openTranslationsFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vocabHelper.extractTranslationString",
        "title": "Extract translation string",
        "category": "Vocab"
      },
      {
        "command": "vocabHelper.openTranslationsFile",
        "title": "Open translation file for current component",
        "category": "Vocab"
      }
    ],
    "configuration": {
      "title": "Vocab Helper",
      "properties": {
        "vocabHelper.formatSaveTranslationOnExtract": {
          "type": "boolean",
          "default": false,
          "description": "Format and save the translation.json file when extracting a translation string"
        }
      }
    },
    "keybindings": [
      {
        "command": "vocabHelper.extractTranslationString",
        "key": "ctrl+shift+t",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "package": "yarn build:release && vsce package",
    "test-compile": "tsc -p ./",
    "build:release": "yarn esbuild-base -- --minify",
    "esbuild": "yarn esbuild-base -- --sourcemap",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild-watch": "yarn esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.0.0",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "esbuild": "^0.13.9",
    "eslint": "^8.1.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "vscode-test": "^1.6.1"
  }
}
