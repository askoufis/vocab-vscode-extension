{
  "name": "vocabhelper",
  "displayName": "Vocab Helper",
  "description": "Helper extension for the Vocab i18n framework",
  "version": "0.7.0",
  "publisher": "askoufis",
  "repository": {
    "type": "git",
    "url": "https://github.com/askoufis/vocab-vscode-extension"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vocabHelper.extractTranslationString",
    "onCommand:vocabHelper.openTranslationsFile"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vocabHelper.extractTranslationString",
        "title": "Extract translation string",
        "category": "Vocab"
      },
      {
        "command": "vocabHelper.openTranslationsFile",
        "title": "Open translation file for current component",
        "category": "Vocab"
      }
    ],
    "configuration": {
      "title": "Vocab Helper",
      "properties": {
        "vocabHelper.maxTranslationKeyLength": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "default": null,
          "description": "Truncate translation keys longer than the specified maximum length"
        },
        "vocabHelper.formatAfterReplace": {
          "type": "boolean",
          "default": false,
          "description": "Format the current document after replacing the highlighted translation string"
        }
      }
    },
    "keybindings": [
      {
        "command": "vocabHelper.extractTranslationString",
        "key": "ctrl+alt+t",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "compile": "tsc",
    "lint": "eslint src --ext ts",
    "watch": "tsc --watch",
    "pretest": "pnpm compile && pnpm lint",
    "test": "node ./out/test/runTest.js",
    "test:unit": "pnpm jest",
    "test:watch": "pnpm jest --watch",
    "package": "pnpm build:release && vsce package",
    "test-compile": "tsc",
    "build:release": "pnpm compile && pnpm esbuild-base --minify",
    "esbuild": "pnpm esbuild-base --sourcemap",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild-watch": "pnpm esbuild-base --sourcemap --watch"
  },
  "dependencies": {
    "@babel/core": "7.17.2",
    "@babel/plugin-syntax-jsx": "7.16.7",
    "@babel/plugin-syntax-typescript": "7.16.7"
  },
  "devDependencies": {
    "@jest/globals": "^27.5.1",
    "@swc/core": "^1.2.165",
    "@swc/jest": "^0.2.20",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.0.0",
    "@types/vscode": "1.61.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "@vscode/test-electron": "^2.1.3",
    "esbuild": "^0.14.21",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-seek": "9.0.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "glob": "^7.2.0",
    "jest": "^27.5.1",
    "mocha": "^9.2.0",
    "typescript": "4.4.4"
  },
  "volta": {
    "node": "16.14.2"
  }
}
