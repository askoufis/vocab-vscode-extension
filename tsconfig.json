{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2024",
    "outDir": "out",
    "lib": ["ES2024"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", ".vscode-test", "src/test/suite/testFiles"]
}
